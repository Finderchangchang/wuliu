<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Main_My_Item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/item_text_color</item>
        <item name="android:textSize">@dimen/fragment_item_text_size</item>
    </style>

    <style name="BiggerTextSize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Main_Bottom_BottomStyle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="Main_Bottom_LabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">#B2B2B2</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Main_Bottom_LinStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="NormalTextSize"><!--白色字。16sp的字体大小，-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--Setting页面的样式-->
    <style name="SettingLinStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <!--没弧度-->
    <style name="SettingEditNoRadiusStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/edittext_style_no_corner</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <!--有弧度-->
    <style name="SettingEditRadiusStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/radius_all_corner_line</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <!--没底部的弧度样式-->
    <style name="SettingEditNoButtomRadiusStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/radius_no_bottom_corner_line</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <!--没顶部的弧度样式-->
    <style name="SettingEditNoTopRadiusStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/radius_no_top_corner_line</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <!--只有左跟右的弧度样式-->
    <style name="SettingEditLeftAndRightRadiusStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/radius_no_top_buttom_corner_line</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="SettingEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/selector_edittext_bg_only_bottom</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="Button_No_RadiusStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/btn_no_radius_click</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="MainTextViewStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/background_total_color</item>
    </style>

    <style name="MainEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/selector_edittext_bg_only_bottom</item>
    </style>
    <style name="ReadCardButtonStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/btn_no_radius_click</item>
        <item name="android:textSize">14sp</item>

    </style>
    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
