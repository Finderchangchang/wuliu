<?xml version="1.0" encoding="utf-8"?><!--我的个人信息页面 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor_f2"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#00A0FF"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <vikicc.custom.image.CircleImageView
                android:id="@+id/frag_img_my"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/psb"
                app:border_color="#fff"
                app:border_width="1dp" />

            <TextView
                android:id="@+id/frag_txt_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="我只是一个用户名"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="用户信息"
                android:textColor="#818181" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/frag_ll_my_user_tel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/my_item_style_only_top"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/my_id" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/frag_txt_my_company_name"
                    style="@style/Main_My_Item"
                    android:text="河北保定戈德网络科技" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/frag_ll_my_company_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/my_item_style_only_top"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/my_persontype" />
                <TextView
                    android:id="@+id/frag_txt_my_user_type"
                    style="@style/Main_My_Item"
                    android:text="17093215800" />



            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="通用"
                android:textColor="#818181" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/frag_ll_my_sys_setting"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/my_item_style_only_top"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/my_setting" />

                <TextView
                    style="@style/Main_My_Item"
                    android:layout_marginLeft="10dp"
                    android:text="系统设置" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/frag_ll_my_about_us"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/my_item_style_only_top"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/my_xiangguan" />

                <TextView
                    style="@style/Main_My_Item"
                    android:layout_marginLeft="10dp"
                    android:text="关于我们" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frag_ll_my_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/my_item_style_only_top"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/my_clear" />

                <TextView
                    style="@style/Main_My_Item"
                    android:layout_marginLeft="10dp"
                    android:text="清理缓存" />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="退出系统" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </LinearLayout>


</ScrollView>
