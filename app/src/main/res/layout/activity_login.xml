<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor_f2"
    android:orientation="vertical">

    <include layout="@layout/total_top_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/login_name" />

        <vikicc.custom.edittext.ClearEditText
            android:id="@+id/login_userid"
            style="@style/SettingEditStyle"
            android:hint="请输入人员编码" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/login_pwd" />

        <vikicc.custom.edittext.ClearEditText
            android:id="@+id/login_pwd"
            style="@style/SettingEditStyle"
            android:hint="请输入密码"
            android:inputType="textPassword"/>
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        style="@style/Button_No_RadiusStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="登录" />
    <Button
        android:id="@+id/login_reg"
        style="@style/Button_No_RadiusStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="注册" />
</LinearLayout>
