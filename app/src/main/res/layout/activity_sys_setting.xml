<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor_f2"
    android:orientation="vertical">

    <include layout="@layout/total_top_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:gravity="center_vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/frag_ll_sys_http_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/my_item_style_only_top"
            android:gravity="center_vertical">

            <TextView
                style="@style/Main_My_Item"
                android:layout_marginLeft="25dp"
                android:text="网络设置"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/frag_ll_sys_password_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/my_item_style_only_top"
            android:gravity="center_vertical">

            <TextView
                style="@style/Main_My_Item"
                android:layout_marginLeft="25dp"
                android:text="修改密码"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/frag_ll_sys_http_update_codes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/my_item_style_only_top"
            android:gravity="center_vertical">

            <TextView
                style="@style/Main_My_Item"
                android:layout_marginLeft="25dp"
                android:text="更新字典"
                android:textSize="16sp" />

        </LinearLayout>

        <vikicc.custom.spinner.nicespinner.NiceSpinner
            android:id="@+id/nicespinner"
            style="@style/Main_My_Item"
            android:layout_width="match_parent"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
